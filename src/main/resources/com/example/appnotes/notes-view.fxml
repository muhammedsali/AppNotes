<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appnotes.NotesController" stylesheets="@/styles.css">
    <TextField fx:id="searchField" promptText="Search Notes" minWidth="200" />
    <Button text="Search" onAction="#searchNotes" minWidth="100" />
    <ListView fx:id="notesListView" />
    <TextField fx:id="titleField" promptText="Title" minWidth="200" />
    <TextField fx:id="contentField" promptText="Content" minWidth="200" />
    <Button text="Add Note" onAction="#addNote" minWidth="100" />
    <Button text="Edit Note" onAction="#editNote" minWidth="100" />
    <Button text="Delete Note" onAction="#deleteNote" minWidth="100" />
    <Label fx:id="feedbackLabel" style="-fx-text-fill: green;" />
    <Button text="Back to Main" onAction="#showMain" minWidth="100" />
</VBox>
